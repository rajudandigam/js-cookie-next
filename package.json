{
  "name": "js-cookie-next",
  "version": "0.0.0",
  "description": "Native-first, TypeScript-first cookie utility for modern browsers.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": ["dist"],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": { "access": "public" },
  "scripts": {
    "clean": "rm -rf dist coverage playwright-report .size-limit",
    "build": "tsup && rm -f dist/*.d.cts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "size": "size-limit",
    "test:all": "npm run typecheck && npm run test && npm run build && npm run size",
    "prepack": "npm run clean && npm run build",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitest/coverage-v8": "^1.3.0",
    "@changesets/cli": "^2.29.0",
    "jsdom": "^25.0.0",
    "size-limit": "^11.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "size-limit": [{ "path": "dist/index.mjs", "limit": "2 KB" }]
}
