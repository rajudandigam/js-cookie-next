{
  "name": "oss-npm-lib-template",
  "version": "0.0.0",
  "description": "Template repo for building modern TypeScript npm libraries with CI, tests, size gate, demo, and release automation.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": ["dist"],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_GITHUB_USERNAME/oss-npm-lib-template.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_GITHUB_USERNAME/oss-npm-lib-template/issues"
  },
  "homepage": "https://github.com/YOUR_GITHUB_USERNAME/oss-npm-lib-template#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "rm -rf dist coverage playwright-report .size-limit",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:pw": "playwright test --config playwright/playwright.config.ts",
    "size": "size-limit",
    "test:all": "npm run typecheck && npm run test && npm run build && npm run size && npm run test:pw",
    "prepack": "npm run clean && npm run build",
    "dev:demo": "vite --config demo/vite.config.ts",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^1.3.0",
    "@changesets/cli": "^2.29.0",
    "jsdom": "^25.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "size-limit": "^11.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.3.1",
    "vitest": "^1.3.0"
  },
  "size-limit": [
    { "path": "dist/index.mjs", "limit": "3 KB" },
    { "path": "dist/react.mjs", "limit": "4 KB" }
  ]
}
