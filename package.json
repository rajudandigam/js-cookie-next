{
  "name": "js-cookie-next",
  "version": "2.0.0",
  "description": "Native-first, TypeScript-first cookie utility for modern browsers.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_GITHUB_USERNAME/js-cookie-next.git"
  },
  "homepage": "https://github.com/YOUR_GITHUB_USERNAME/js-cookie-next#readme",
  "bugs": {
    "url": "https://github.com/YOUR_GITHUB_USERNAME/js-cookie-next/issues"
  },
  "keywords": [
    "cookies",
    "cookieStore",
    "partitioned",
    "CHIPS",
    "typescript",
    "browser"
  ],
  "scripts": {
    "clean": "rm -rf dist coverage playwright-report .size-limit",
    "build": "tsup",
    "test": "vitest run",
    "size": "size-limit",
    "prepack": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitest/coverage-v8": "^1.3.0",
    "@changesets/cli": "^2.29.0",
    "jsdom": "^25.0.0",
    "size-limit": "^11.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "2 KB"
    }
  ]
}